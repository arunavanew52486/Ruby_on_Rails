<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<div id="articles">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td><%= article.title%></td>
        <td><%= article.description%></td>
        <td><%= link_to "Show", article_path(article) %></td>

      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New article", new_article_path %>
