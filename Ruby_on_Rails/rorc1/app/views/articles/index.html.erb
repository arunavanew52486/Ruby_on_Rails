<div class="container mt-4">
  <p style="color: green"><%= notice %></p>

  <h1 class="text-center">List of all Articles</h1>

  <div id="articles">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Created at</th>
          <th scope="col">Updated at</th>
          <th scope="col">Visit</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
        <tr>
          <td><%= article.title%></td>
          <td><%= truncate(article.description, length: 15)%></td>
          <td><%= time_ago_in_words(article.created_at) %></td>
          <td><%= time_ago_in_words(article.updated_at) %></td>
          <td><%= link_to "Show", article_path(article) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "Create New article", new_article_path, class: "btn btn-primary" %>
</div>

<%= render 'layouts/footer' %>
