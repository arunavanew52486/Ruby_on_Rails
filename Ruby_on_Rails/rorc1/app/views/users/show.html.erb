<div class="container">
  <p style="color: green"><%= notice %></p>

  <%= render @user %>

  <div class="d-flex justify-content-center gap-2 my-4">
    <%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-primary" %>
    <%= link_to "<- Back to users", users_path, class: "btn btn-dark" %>
    <%= button_to "Destroy this user", @user, method: :delete, class: "btn btn-danger"  %>
  </div>

  <h2 class="fs-2 my-3 text-center">Articles created by this user</h2>
  <%= render "articles/article" %>
</div>