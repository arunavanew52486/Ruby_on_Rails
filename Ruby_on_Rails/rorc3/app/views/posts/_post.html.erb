<div id="<%= dom_id post %>" class="bg-white p-4 shadow-lg rounded-lg mb-10">

  <div>
    <h1 class="mb-8 text-4xl font-extrabold tracking-tight leading-none text-center md:text-5xl lg:text-6xl">
      <%= link_to post.title, post %>
    </h1>
  </div>

  <div class="mb-3">
    <img src="https://source.unsplash.com/random/600x400" class="w-full" alt="Random image from unsplash">
  </div>

  <div>
    <strong>Content:</strong>
    <%= post.content %>
  </div>

  <div class="grid grid-rows-2 gap-1 text-center mt-5">
    <div class="row-span-1 grid grid-cols-2 gap-3">
      <%= link_to "Edit this post", edit_post_path(@post), class:"col-span-1 w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
      <%= button_to "Destroy this post", @post, method: :delete, class:"col-span-1 w-full focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" %>
    </div>
    <div class="row-span-1 grid">
      <%= link_to "Back to posts", posts_path, class:"w-full text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700" %>
    </div>
  </div>

</div>
