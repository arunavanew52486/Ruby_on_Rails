  <% if notice %>
    <section class="col-span-10 col-start-2 mt-10">
      <div class="flex items-center p-4 mb-4 text-sm text-green-800 border border-green-300 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400 dark:border-green-800" role="alert">
        <svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
        </svg>
        <span class="sr-only">Info</span>
        <div>
          <%= notice %>
        </div>
      </div>
    </section>
  <% end %>

  <section class="col-span-10 col-start-2 md:col-span-8 md:col-start-3 lg:col-span-4 lg:col-start-5 pt-14 lg:pt-24">
    <h1 class="mb-8 text-4xl font-extrabold tracking-tight leading-none text-center md:text-5xl lg:text-6xl">
      All Posts
    </h1>
  </section>

<!-- Search & Crate Post -->
<section class="col-span-10 col-start-2 sm:col-span-8 sm:col-start-3 md:col-span-6 md:col-start-4 my-10">
  <div class="grid grid-cols-4 shadow-lg rounded-xl">

    <div class="col-span-3 bg-white border p-4 rounded-l-xl text-center">
      <h3>Search post</h3>
      <input type="text" id="simple-search" class="mt-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Search here..." />
    </div>

    <div class="col-span-1 col-start-4 bg-white border p-4 rounded-r-xl text-center">
      <h3>Add post</h3>
      <div class="flex justify-center mt-2">
        <%= link_to "+", new_post_path, class:"text-4xl w-fit px-2 text-center text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-full me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 hover:cursor-pointer" %>
      </div>
    </div>

  <div>
</section>

<!-- List of Post -->
<section class="col-span-10 col-start-2 my-10">
  <div id="posts" class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3 md:gap-10">
    <% if @posts.empty? %>
      <h2 class="col-span-1 sm:col-span-2 md:col-span-1 md:col-start-2 text-2xl md:text-3xl lg:text-4xl text-center">
        No post available
      </h2>
      <%= image_tag 'gifs/empty.gif', class:"mx-auto col-span-1 sm:col-span-2 md:col-span-1 md:col-start-2" %>
    <% else %>
      <% @posts.each do |post| %>
        <%#= render post %>
        <a href="<%= post_path(post) %>">
          <div id="<%= dom_id post %>" class="col-span-1 bg-white border p-4 shadow-lg rounded-xl text-center hover:bg-slate-50 hover:scale-105 transition-all">
            <img src="https://source.unsplash.com/random/400x400" class="rounded-lg mb-3" alt="Random image from unsplash">
            <strong class="text-xl"><%= post.title %></strong>
            <p class="mt-3 text-justify text-gray-500"><%= post.content.truncate(60) %></p>
          </div>
        </a>
      <% end %>
    <% end %>
  </div>
</section>
